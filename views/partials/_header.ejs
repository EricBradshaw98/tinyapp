<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="ml-auto"> 
        
        <% if (username) { %>
          
          <div class="form-inline" style="color: white; margin-right: 1em;">
            Logged in as: <%= username %>!
            <form class="ml-2" action="/logout" method="POST">
              <button type="submit" class="btn btn-danger">Logout</button>
            </form>
          </div>
        <% } else {%>
          
          <form class="form-inline" action="/login" method="POST">
            <label for="username"></label>
            <input
              class="form-control"
              type="text"
              name="username"
              placeholder="Username"
              style="width: 300px; margin-right: 0.5em;"
            />
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
